{
  "name": "satisfier",
  "version": "0.0.0-development",
  "description": "A purposely loose comparison tool.",
  "homepage": "https://github.com/unional/satisfier",
  "bugs": {
    "url": "https://github.com/unional/satisfier/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/satisfier.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": {
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    },
    "require": {
      "types": "./cjs/index.d.ts",
      "default": "./cjs/index.js"
    }
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/testPredicates.ts",
    "!**/*.{spec,test,unit,accept,integrate,system}.*"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm build:tslib",
    "build:cjs": "tsc -p tsconfig.cjs.json && ncp package.cjs.json cjs/package.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:tslib": "tsc -p tsconfig.tslib.json && ncp package.cjs.json tslib/package.json",
    "build:doc": "typedoc",
    "clean": "rimraf cjs coverage esm lib tslib",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "test:types": "tsc",
    "verify": "npm-run-all clean -p build lint coverage depcheck test:types -p size",
    "watch": "jest --watch",
    "watch:type": "tsc --watch"
  },
  "dependencies": {
    "tersify": "^3.10.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@repobuddy/jest": "^5.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.0.0",
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "assertron": "^11.0.0",
    "depcheck": "^1.4.3",
    "eslint": "8.57.1",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "29.7.0",
    "jest-validate": "29.7.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^3.0.0",
    "ncp": "^2.0.0",
    "npm-run-all2": "^8.0.0",
    "pinst": "^3.0.0",
    "rimraf": "^6.0.0",
    "semantic-release": "^25.0.0",
    "size-limit": "^9.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.4.0",
    "type-plus": "7.6.2",
    "typedoc": "^0.28.0",
    "typedoc-plugin-extras": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "size-limit": [
    {
      "path": "./cjs/index.js",
      "limit": "10 kB"
    },
    {
      "path": "./esm/index.js",
      "limit": "10 kB"
    },
    {
      "path": "./tslib/index.js",
      "limit": "10 kB"
    }
  ]
}
