{
  "name": "satisfier",
  "description": "Manage and generate artifacts to test data across boundaries",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist",
    "dist-es5",
    "dist-es2015"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-es5",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "clean": "rimraf dist dist-es5 && rimraf dist-es2015",
    "codecov": "codecov",
    "coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/satisfier.git"
  },
  "bugs": {
    "url": "https://github.com/unional/satisfier/issues"
  },
  "homepage": "https://github.com/unional/satisfier",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/scripts/setup-test-env.js"
    ],
    "testRegex": ".*\\.spec.ts$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/node": "^9.6.4",
    "assertron": "^5.0.0",
    "dependency-check": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-unional": "^1.0.0",
    "jest": "^22.4.3",
    "power-assert": "^1.5.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.5",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.2",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "tersify": "^1.2.3"
  }
}
